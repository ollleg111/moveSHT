<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="60">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_bigger">

            <ImageView
                android:id="@+id/btn_back"
                style="@style/BtnBackBlackA"
                tools:ignore="ContentDescription"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <movesht.com.movesht.CustomFontsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_big"
                android:text="@string/office"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_13"
                app:fontName="BebasNeueBook"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ll_center"
            android:layout_toStartOf="@id/ll_center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_garage"
                style="@style/imgBlackButtonBig"
                android:background="@drawable/circle_button_black"
                android:src="@drawable/ic_garage_white"
                tools:ignore="ContentDescription"/>

            <movesht.com.movesht.CustomFontsTextView
                style="@style/TvBlackButton"
                android:text="@string/garage"
                app:fontName="ArimoRegular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ll_center"
            android:layout_toRightOf="@id/ll_center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_services"
                style="@style/imgBlackButtonBig"
                android:background="@drawable/circle_button_black"
                android:src="@drawable/ic_services_white"
                tools:ignore="ContentDescription"/>

            <movesht.com.movesht.CustomFontsTextView
                style="@style/TvBlackButton"
                android:text="@string/services"
                app:fontName="ArimoRegular"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingLeft="@dimen/size_0"
        android:paddingRight="@dimen/size_0">

        <View
            android:layout_width="@dimen/size_10"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorGrey"/>

        <LinearLayout
            android:layout_width="@dimen/size_16"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/img_baking"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_confirmed"
                style="@style/imgBlackButton"
                android:background="@drawable/circle_button_black"
                android:src="@drawable/ic_confirmed_white"
                tools:ignore="ContentDescription"/>

            <movesht.com.movesht.CustomFontsTextView
                style="@style/TvBlackButton"
                android:text="@string/confirmed"
                app:fontName="ArimoRegular"/>
        </LinearLayout>

        <ImageView
            android:id="@id/img_baking"
            style="@style/imgBlackButton"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_button_black"
            android:src="@drawable/ic_backing_white"
            tools:ignore="ContentDescription"/>

        <movesht.com.movesht.CustomFontsTextView
            style="@style/TvBlackButton"
            android:layout_below="@+id/img_baking"
            android:layout_centerHorizontal="true"
            android:text="@string/baking"
            app:fontName="ArimoRegular"/>

        <LinearLayout
            android:layout_width="@dimen/size_16"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/img_baking"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_completed"
                style="@style/imgBlackButton"
                android:background="@drawable/circle_button_black"
                android:src="@drawable/ic_completed_white"
                tools:ignore="ContentDescription"/>

            <movesht.com.movesht.CustomFontsTextView
                style="@style/TvBlackButton"
                android:text="@string/completed"
                app:fontName="ArimoRegular"/>
        </LinearLayout>

        <movesht.com.movesht.CustomFontsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="@dimen/padding_big"
            android:text="@string/jobs"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_2"
            app:fontName="ArimoRegular"/>


        <!--<movesht.com.movesht.CustomFontsTextView-->
        <!--android:id="@+id/tvConfirmed"-->
        <!--style="@style/TvBlackButton"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:drawableTop="@drawable/button_confirmed"-->
        <!--android:gravity="center"-->
        <!--android:text="@string/confirmed"-->
        <!--app:fontName="ArimoRegular"/>-->

        <!--<movesht.com.movesht.CustomFontsTextView-->
        <!--android:id="@+id/tvBacking"-->
        <!--style="@style/TvBlackButton"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:drawableTop="@drawable/button_baking"-->
        <!--android:text="@string/baking"-->
        <!--app:fontName="ArimoRegular"/>-->

        <!--<movesht.com.movesht.CustomFontsTextView-->
        <!--android:id="@+id/tvCompleted"-->
        <!--style="@style/TvBlackButton"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:drawableTop="@drawable/button_completed"-->
        <!--android:text="@string/completed"-->
        <!--app:fontName="ArimoRegular"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/size_0"
        android:paddingRight="@dimen/size_0">

        <View
            android:layout_width="@dimen/size_15"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorGrey"/>

        <LinearLayout
            android:layout_width="@dimen/size_16"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/img_bid_loads"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_pass_loads"
                style="@style/imgBlackButton"
                android:background="@drawable/circle_button_black"
                android:src="@drawable/ic_loads_white"
                tools:ignore="ContentDescription"/>

            <movesht.com.movesht.CustomFontsTextView
                style="@style/TvBlackButton"
                android:text="@string/passing_loads"
                app:fontName="ArimoRegular"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_bid_loads"
            style="@style/imgBlackButton"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_button_black"
            android:src="@drawable/ic_big_car_white"
            tools:ignore="ContentDescription"/>

        <movesht.com.movesht.CustomFontsTextView
            style="@style/TvBlackButton"
            android:layout_below="@id/img_bid_loads"
            android:layout_centerHorizontal="true"
            android:text="@string/bid_loads"
            app:fontName="ArimoRegular"/>

        <LinearLayout
            android:layout_width="@dimen/size_16"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/img_bid_loads"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_set_alerts"
                style="@style/imgBlackButton"
                android:background="@drawable/circle_button_black"
                android:src="@drawable/ic_alerts_white"
                tools:ignore="ContentDescription"/>

            <movesht.com.movesht.CustomFontsTextView
                style="@style/TvBlackButton"
                android:text="@string/set_alerts"
                app:fontName="ArimoRegular"/>
        </LinearLayout>

        <movesht.com.movesht.CustomFontsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="@dimen/padding_big"
            android:text="@string/loads"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_2"
            app:fontName="ArimoRegular"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/colorYellowSecond"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/colorRed"
        android:orientation="horizontal"/>
</LinearLayout>