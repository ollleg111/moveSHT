<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:layout_alignTop="@+id/title_image"
        android:layout_alignBottom="@+id/tv_model_name"
        android:layout_alignStart="@+id/title_image"
        android:layout_alignEnd="@+id/title_image"
        android:layout_alignLeft="@+id/title_image"
        android:layout_alignRight="@+id/title_image" />

    <ImageView
        android:id="@+id/title_image"
        style="@style/imgBlackButtonBigRv"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_med"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/btn_white_blue_checked"
        tools:ignore="ContentDescription"/>

    <movesht.com.movesht.CustomFontsTextView
        android:id="@+id/tv_model_name"
        style="@style/TvWhiteButton"
        android:layout_below="@+id/title_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/margin_button"
        android:hint="@string/tv_model"
        android:layout_marginBottom="@dimen/margin_med"
        app:fontName="ArimoRegular"/>

</RelativeLayout>

