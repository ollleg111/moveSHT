<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_black"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_bigger"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/btn_back"
            style="@style/BtnBackBlack"
            tools:ignore="ContentDescription"/>

        <movesht.com.movesht.CustomFontsTextView
            style="@style/TvBlack"
            android:text="@string/freight_type_alert"
            app:fontName="BebasNeueBold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="99">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="99">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_one"
                        android:layout_width="@dimen/size_9"
                        android:layout_height="@dimen/size_9"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/circle_white"
                        tools:ignore="ContentDescription"/>

                    <movesht.com.movesht.CustomFontsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/home_down"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_2"
                        app:fontName="BebasNeueBold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_oneTriangle"
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/triangle_white"
                    android:visibility="visible"
                    tools:ignore="ContentDescription"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_two"
                        android:layout_width="@dimen/size_9"
                        android:layout_height="@dimen/size_9"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/circle_white"
                        tools:ignore="ContentDescription"/>

                    <movesht.com.movesht.CustomFontsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/text2"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_2"
                        app:fontName="BebasNeueBold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_twoTriangle"
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/triangle_white"
                    android:visibility="gone"
                    tools:ignore="ContentDescription"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_three"
                        android:layout_width="@dimen/size_9"
                        android:layout_height="@dimen/size_9"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/circle_white"
                        tools:ignore="ContentDescription"/>

                    <movesht.com.movesht.CustomFontsTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/text2"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_2"
                        app:fontName="BebasNeueBold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_threeTreangle"
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/triangle_white"
                    android:visibility="gone"
                    tools:ignore="ContentDescription"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <include layout="@layout/view_buttons"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="99">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/circle_white"
                    tools:ignore="ContentDescription"/>


                <movesht.com.movesht.CustomFontsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/home_down"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_2"
                    app:fontName="BebasNeueBold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/circle_white"
                    tools:ignore="ContentDescription"/>


                <movesht.com.movesht.CustomFontsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_2"
                    app:fontName="BebasNeueBold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/circle_white"
                    tools:ignore="ContentDescription"/>


                <movesht.com.movesht.CustomFontsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_2"
                    app:fontName="BebasNeueBold"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="99">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/circle_white"
                    tools:ignore="ContentDescription"/>


                <movesht.com.movesht.CustomFontsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/home_down"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_2"
                    app:fontName="BebasNeueBold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/circle_white"
                    tools:ignore="ContentDescription"/>


                <movesht.com.movesht.CustomFontsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_2"
                    app:fontName="BebasNeueBold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_9"
                    android:layout_height="@dimen/size_9"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/circle_white"
                    tools:ignore="ContentDescription"/>


                <movesht.com.movesht.CustomFontsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/text2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_2"
                    app:fontName="BebasNeueBold"/>

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13">

            <ImageView
                android:id="@+id/btn_cancel"
                style="@style/ImgBtnYesNo"
                android:layout_gravity="center|end"
                android:background="@drawable/button_second_white"
                android:src="@drawable/ic_cancel_red"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:id="@+id/btn_ok"
                style="@style/ImgBtnYesNo"
                android:layout_gravity="center|start"
                android:background="@drawable/button_second_white"
                android:src="@drawable/ic_ok_green"
                tools:ignore="ContentDescription"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>

