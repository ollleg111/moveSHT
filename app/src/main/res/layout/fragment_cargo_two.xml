<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragmentCargo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_black"
                tools:context=".MainActivity">

    <!--<RelativeLayout-->
        <!--android:id="@+id/rl_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/margin_bigger">-->

        <!--<ImageView-->
            <!--android:id="@+id/img_back"-->
            <!--style="@style/BtnBackWhite"-->
            <!--tools:ignore="ContentDescription"/>-->

    <!--</RelativeLayout>-->

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/size_8">

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="@dimen/size_6"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

        </LinearLayout>

        <movesht.com.movesht.CustomFontsButton
            android:id="@+id/btn_package"
            style="@style/BtnKeys"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ll_center"
            android:layout_toStartOf="@+id/ll_center"
            android:text="@string/_1_package"
            app:fontName="BebasNeueBold"/>

        <movesht.com.movesht.CustomFontsButton
            android:id="@+id/btn_lot"
            style="@style/BtnKeys"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ll_center"
            android:layout_toRightOf="@+id/ll_center"
            android:text="@string/lot_few"
            app:fontName="BebasNeueBold"/>

        <movesht.com.movesht.CustomFontsButton
            android:id="@+id/btn_one"
            style="@style/BtnKeys"
            android:layout_below="@+id/btn_package"
            android:layout_marginTop="@dimen/size_8"
            android:layout_toLeftOf="@+id/ll_center"
            android:layout_toStartOf="@+id/ll_center"
            android:text="@string/one_stop"
            app:fontName="BebasNeueBold"/>

        <movesht.com.movesht.CustomFontsButton
            android:id="@+id/btn_few"
            style="@style/BtnKeys"
            android:layout_below="@id/btn_lot"
            android:layout_marginTop="@dimen/size_8"
            android:layout_toEndOf="@+id/ll_center"
            android:layout_toRightOf="@+id/ll_center"
            android:text="@string/few_stops"
            app:fontName="BebasNeueBold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_bigger"
        android:layout_alignParentBottom="true">

        <movesht.com.movesht.CustomFontsButton
            android:id="@+id/btn_continue"
            android:layout_width="@dimen/size_text_one"
            android:layout_height="@dimen/size_11"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_corners_green"
            android:clickable="true"
            android:text="@string/btn_continue"
            android:textColor="@drawable/button_continue"
            android:textSize="@dimen/font_8"
            app:fontName="BebasNeueBold"/>
    </RelativeLayout>
</RelativeLayout>


